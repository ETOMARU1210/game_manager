<!-- タスク作成モーダル -->
<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="taskModalLabel">タスク作成</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @task do |form| %>
          <div class="mb-3">
            <%= form.label :task_name, "タスク名", class: "form-label" %>
            <%= form.text_field :task_name, class: "form-control", placeholder: "タスク名を入力" %>
          </div>
          <div class="mb-3">
            <%= form.label :task_detail, "詳細", class: "form-label" %>
            <%= form.text_area :task_detail, class: "form-control", rows: 5, placeholder: "詳細を入力" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
        <button type="button" class="btn btn-primary">作成</button>
      </div>
    </div>
  </div>
</div>