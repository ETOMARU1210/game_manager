<!-- タスク作成モーダル（PC対応） -->
<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="taskModalLabel">タスク作成</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="taskName" class="form-label">タスク名</label>
            <input type="text" class="form-control" id="taskName" placeholder="タスク名を入力">
          </div>
          <div class="mb-3">
            <label for="taskDetail" class="form-label">詳細</label>
            <textarea class="form-control" id="taskDetail" rows="3" placeholder="詳細を入力"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
        <button type="button" class="btn btn-primary">作成</button>
      </div>
    </div>
  </div>
</div>